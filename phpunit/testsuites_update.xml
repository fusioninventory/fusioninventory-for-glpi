<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
  bootstrap="bootstrap.php"
  processIsolation="false"
  backupGlobals="false"
  strict="false"
  >
  <logging>
    <log type="junit" target="../../../../build/logs/junit_update.xml" logIncompleteSkipped="true" />
  </logging>
  <!-- exclude relatively to ${basedir} -->
  <filter>
    <blacklist>
      <directory suffix=".php">glpi/*</directory>
    </blacklist>
    <whitelist>
      <directory suffix=".php">glpi/plugins/fusioninventory/*</directory>
      <exclude>
        <directory suffix=".php">glpi/plugins/fusioninventory/phpunit/*</directory>
      </exclude>
    </whitelist>
  </filter>
  <testsuites>
    <testsuite name="Update">
      <!-- First, install GLPI -->
      <file>glpi/plugins/fusioninventory/phpunit/0_Install/GLPIInstallTest.php</file>
      <!-- Then, dump the GLPI install (for quicker setUp) -->
      <file>glpi/plugins/fusioninventory/phpunit/0_Install/SaveInstallTest.php</file>
      <!-- Finally, test update from various Fusioninventory version -->
      <file>glpi/plugins/fusioninventory/phpunit/0_Install/FusinvUpdateTest.php</file>
    </testsuite>
  </testsuites>
</phpunit>
